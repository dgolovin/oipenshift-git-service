{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/build/",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "types": ["node", "jest"]
  },
  "exclude": [
    ".yarn",
    "**/node_modules",
    "dist",
    "packages/console-dynamic-plugin-sdk/scripts"
  ],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json"]
}
